<h1>Admin Dashboard</h1>

<h2>All Orders</h2>
<h3>Pending</h3>
<h3>Packaged</h3>
<h3>Shipped</h3>
<ul>
<% @users.each do |user| %>
  <%user.orders.each do |order|%>
        <li>User name: <%= user.user_name %></li>
        <li>Order Id: <%= order.id %></li>
        <li>Order Date: <%= order.created_at.to_formatted_s(:short)%></li>
        <% if order.status == "pending" %>
        <li>Order status: <%= order.status%><%= button_to 'Ship Order', ship_order_path(order), method: :patch  %></li>
        <%else %>
        <li>Order status: <%=order.status%></li>
  <% end  %>
  <br>
  <% end  %>
</ul>
<% end  %>
